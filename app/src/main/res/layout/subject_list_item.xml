<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp">

    <View
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_190sdp"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@color/cardBackground1" />

    <TextView
        android:id="@+id/subjectListItemTitle"
        style="@style/tertiaryTextMediumLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_toEndOf="@+id/progress_bar"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        android:text="Coordinate Geometry" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectListItemRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectListItemTitle"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toEndOf="@+id/progress_bar"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/video_list_item" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:enabled="false"
        android:background="@drawable/checkbox_round_selector"
        android:button="@android:color/transparent"
        android:checked="true" />

</RelativeLayout>