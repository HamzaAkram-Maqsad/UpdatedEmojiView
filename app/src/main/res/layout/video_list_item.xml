<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/videoItemImageCard"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">

            <ImageView
                android:id="@+id/videoItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/temp_video"
                tools:ignore="ContentDescription" />
            <!--            <View-->
            <!--                android:id="@+id/overlay"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:alpha="0.48"-->
            <!--                android:background="#000000"-->
            <!--                android:scaleType="centerCrop" />-->

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/videoItemTitle"
            style="@style/tertiaryTextMediumSmall"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoItemImageCard"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Coordinate Geometry" />

        <TextView
            android:id="@+id/videoItemDuration"
            style="@style/tertiaryTextBoldSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoItemTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="5:34"
            android:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>