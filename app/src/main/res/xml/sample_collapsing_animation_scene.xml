<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="easeInOut">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/viewpager"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/subjectCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_1sdp"
            motion:layout_constraintBottom_toTopOf="@id/guideline_toolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/backButton">

            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="@dimen/_12sdp" />
        </Constraint>
        <Constraint
            android:id="@id/mainCourseItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:elevation="@dimen/_30sdp"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="@id/subjectCard"
            motion:layout_constraintTop_toTopOf="@id/subjectCard"
            motion:layout_constraintVertical_bias="0" />

        <Constraint android:id="@id/courseProgressCollapsed">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/subjectProgressIndicatorCollapsed">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/totalLessons">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint android:id="@id/totalChapters">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.5" />
        </Constraint>

        <Constraint android:id="@id/practiceQuestions">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint android:id="@id/subjectProgressIndicator">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint android:id="@id/pastPapers">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint android:id="@id/courseHours">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint android:id="@id/courseProgress">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint android:id="@id/resumeButton">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>


        <!--                <Constraint android:id="@id/menu_icon">-->
        <!--                    <CustomAttribute-->
        <!--                        motion:attributeName="ColorFilter"-->
        <!--                        motion:customColorValue="#000000" />-->
        <!--                </Constraint>-->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/subjectCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_1sdp"
            motion:layout_constraintBottom_toTopOf="@id/guideline_toolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/backButton">

            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="@dimen/_14sdp" />
        </Constraint>

        <Constraint
            android:id="@id/mainCourseItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="0dp"
            android:elevation="@dimen/_30sdp"
            motion:layout_constraintBottom_toBottomOf="@id/subjectCard"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="@id/subjectCard"
            motion:layout_constraintTop_toTopOf="@id/subjectCard"
            motion:layout_constraintVertical_bias="0.5" />

        <Constraint
            android:id="@+id/guideline_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintGuide_begin="@dimen/_95sdp" />

        <Constraint android:id="@id/courseProgressCollapsed">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint android:id="@id/subjectProgressIndicatorCollapsed">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint android:id="@id/totalLessons">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>


        <Constraint android:id="@id/courseProgress">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint android:id="@id/subjectProgressIndicator">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/totalChapters">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint android:id="@id/practiceQuestions">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/pastPapers">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/courseHours">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint android:id="@id/resumeButton">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>

        <!--        <Constraint android:id="@id/mainCourseItemTitle">-->
        <!--            <CustomAttribute-->
        <!--                motion:attributeName="textSize"-->
        <!--                motion:customFloatValue="@dimen/_16ssp" />-->
        <!--        </Constraint>-->

        <!--        <Constraint android:id="@id/menu_icon">-->
        <!--            <CustomAttribute-->
        <!--                motion:attributeName="ColorFilter"-->
        <!--                motion:customColorValue="#ffffff" />-->
        <!--        </Constraint>-->

    </ConstraintSet>
</MotionScene>